{
	"name": "panasonic-kairos",
	"version": "1.1.0",
	"api_version": "1.0.0",
	"keywords": [
		"Software",
		"Vision Mixer"
	],
	"manufacturer": "Panasonic",
	"product": "Kairos",
	"shortname": "kairos",
	"description": "Module to control Kairos",
	"main": "dist/index.js",
	"scripts": {
		"dev": "yarn build:watch",
		"build": "npx rimraf dist && npx typescript@~4.5.5 -p tsconfig.build.json",
		"build:main": "tsc -p tsconfig.build.json",
		"build:watch": "tsc -p tsconfig.build.json --watch",
		"lint": "eslint . --ext .ts",
		"postinstall": "yarn build",
		"test": "jest"
	},
	"author": "Jeffrey Davidsz <jeffrey.davidsz@vicreo.eu>",
	"homepage": "https://github.com/bitfocus/companion-module-panasonic-kairos#readme",
	"bugs": {
		"url": "https://github.com/bitfocus/companion-module-panasonic-kairos/issues"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bitfocus/companion-module-panasonic-kairos.git"
	},
	"lint-staged": {
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.{ts}": [
			"yarn lint --fix --",
			"git add"
		]
	},
	"eslintIgnore": [
		"/tests/*.test.ts"
	],
	"license": "MIT",
	"dependencies": {
		"@types/lodash": "^4.14.178",
		"@types/xml2js": "^0.4.9",
		"lodash": "^4.17.21",
		"xml2js": "^0.4.23"
	},
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"@types/node": "^17.0.12",
		"@typescript-eslint/eslint-plugin": "^5.10.1",
		"@typescript-eslint/parser": "^5.10.1",
		"eslint": "^8.7.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.4",
		"jest": "^27.4.7",
		"lint-staged": "^12.3.2",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.1.3",
		"typescript": "^4.5.5"
	}
}
